<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root fx:id="fileItem" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" type="HBox" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
         <children>
            <ImageView fx:id="chart_icon" fitHeight="35.0" fitWidth="35.0" preserveRatio="true">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </ImageView>
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <Label fx:id="fileName" contentDisplay="CENTER" graphicTextGap="5.0" text="FIle" textAlignment="CENTER">
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <rotationAxis>
                        <Point3D />
                     </rotationAxis>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets left="5.0" right="5.0" />
                     </padding>
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="filePath" contentDisplay="CENTER" text="path/to/file" textFill="#787878e7">
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" top="-3.0" />
                     </VBox.margin>
                     <font>
                        <Font size="11.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="5.0" />
         </padding>
         <HBox.margin>
            <Insets left="5.0" />
         </HBox.margin>
      </HBox>
   </children>
</fx:root>
